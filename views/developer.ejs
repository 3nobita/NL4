<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= developer.name %>'s Dashboard</title>
  <style>
    /* Add your styles here */
    .container {
      padding: 20px;
    }
    .tasks-container {
      margin-bottom: 20px;
    }
    .tasks-container h3 {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <header>
    <div class="container">
      <h1><%= developer.name %>'s Dashboard</h1>
    </div>
  </header>

  <div class="container">
    <div class="profile">
      <h2>Profile</h2>
      <p><strong>ID:</strong> <%= developer.id %></p>
      <p><strong>Role:</strong> <%= developer.role %></p>
    </div>

    <div class="tasks-container">
      <h3>Residential Tasks</h3>
      <% const residentialTasks = tasks.filter(task => task.category === 'Residential'); %>
      <% if (residentialTasks.length > 0) { %>
        <ul>
          <% residentialTasks.forEach(task => { %>
            <li>
              <strong>Title:</strong> <%= task.title %> <br>
              <strong>Description:</strong> <%= task.description %> <br>
              <strong>Status:</strong> <%= task.status %> <br>
              <strong>Category:</strong> <%= task.category %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No Residential tasks assigned.</p>
      <% } %>
    </div>

    <div class="tasks-container">
      <h3>Commercial Tasks</h3>
      <% const commercialTasks = tasks.filter(task => task.category === 'Commercial'); %>
      <% if (commercialTasks.length > 0) { %>
        <ul>
          <% commercialTasks.forEach(task => { %>
            <li>
              <strong>Title:</strong> <%= task.title %> <br>
              <strong>Description:</strong> <%= task.description %> <br>
              <strong>Status:</strong> <%= task.status %> <br>
              <strong>Category:</strong> <%= task.category %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No Commercial tasks assigned.</p>
      <% } %>
    </div>

    <a href="/">Back to Home</a>
  </div>
</body>
</html>
